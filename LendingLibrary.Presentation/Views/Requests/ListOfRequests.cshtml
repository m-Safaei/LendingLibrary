@model IEnumerable<UserRequestResponseDto>

@{
    ViewBag.Title = "لیست درخواست‌ها";
}

<div class="breadcrumb">
    <div style="font-weight: bold;font-size: 20px">لیست درخواست‌ها</div>
    <div class="text-grey">
        <span><a asp-controller="Home" asp-action="Index">خانه</a></span>
        <i class="fa-solid fa-caret-left"></i>
        <span><a asp-controller="User" asp-action="UserProfile">پروفایل</a></span>
        <i class="fa-solid fa-caret-left"></i>
        <span>درخواست‌ها</span>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="box-container">
        <div class="table-container">
            <table class="table">
                <thead>
                <th>عنوان</th>
                <th>نویسنده</th>
                <th>زبان</th>
                <th>تاریخ نشر</th>
                <th>وضعیت</th>
                <th>درخواست برای</th>
                </thead>
                <tbody>
                    @foreach (UserRequestResponseDto book in Model)
                    {
                        <tr>
                            <td style="width:40%"><a asp-controller="Books" asp-action="BookPage" asp-route-id="@book.BookId">@book.Title</a></td>
                            <td style="width:20%">@book.Author</td>
                            <td style="width:15%">@book.Language</td>
                            <td style="width:15%">@book.PublishedYear</td>
                            <td style="width:20%">@book.Status</td>
                            <td style="width:30%">@book.Request</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else if (Model == null)
{
    <div class="box-container">
        <div class="table-container">
            <table class="table">
                <thead>
                <th>عنوان</th>
                <th>نویسنده</th>
                <th>زبان</th>
                <th>تاریخ نشر</th>
                </thead>
                <tbody>
                    <tr>
                        <td style="width:40%"></td>
                        <td style="width:20%"></td>
                        <td style="width:15%"></td>
                        <td style="width:20%"></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>


}
else if (Model != null && !Model.Any())
{
    <div class="text-red" style="padding-right:200px">درخواستی یافت نشد</div>
}