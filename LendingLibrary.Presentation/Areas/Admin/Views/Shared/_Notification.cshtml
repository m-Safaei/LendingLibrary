@using Microsoft.AspNetCore.Html
@if (TempData["InfoMessage"] != null)
{
    <script>
        Toastify({

            text: "@(new HtmlString(TempData["InfoMessage"] as string))",

            duration: 4000,
            gravity: "bottom",
            close: true

        }).showToast();
    </script>
}
